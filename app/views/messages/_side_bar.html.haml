.side-contents  
  .side-header
    .side-box
      %p.side-box__name
        = current_user.name
      %ul.side-box__item
        %li
        = link_to new_group_path do
          = icon('fa','edit',class: "side-box__item--create")
        %li
        =link_to edit_user_path(current_user) do
          = icon('fa','cog',class: "side-box__item--edit")
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
